@page "/accounts"
@attribute [Authorize(Policy = "CanViewTransactions")]
@inject IAccountService accountService
@using TeamCashCenter.Services.Contracts

<h2>Konten</h2>

<div class="d-flex justify-content-between align-items-center mb-3">

    <a class="btn btn-primary" href="/accounts/edit">Neues Konto</a>
</div>

@if (accounts is null)
{
    <p>Loading...</p>
}
else
{
    <div class="row">
        @foreach (var acc in accounts)
        {
            <div class="col-sm-6 col-md-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@acc.Name</h5>
                        @if (!string.IsNullOrWhiteSpace(acc.Description))
                        {
                            <p class="card-text text-muted small">@acc.Description</p>
                        }
                        else
                        {
                            <p class="card-text text-muted small">&nbsp;</p>
                        }
                        @if (!string.IsNullOrWhiteSpace(acc.AccountNumber))
                        {
                            <p class="card-text text-muted small">Kontonummer: @acc.AccountNumber</p>
                        }
                        else
                        {
                            <p class="card-text text-muted small">&nbsp;</p>
                        }
                        <div class="mt-auto">
                            <p class="h5">@acc.Balance.ToString("C")</p>
                              <a class="btn btn-sm btn-outline-secondary me-2" href="/accounts/edit/@acc.Id"><i class="bi bi-pencil"></i> Bearbeiten</a>
                              <a class="btn btn-sm btn-outline-danger" href="/accounts/delete/@acc.Id"><i class="bi bi-trash"></i> LÃ¶schen</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Account>? accounts;

    protected override async Task OnInitializedAsync()
    {
        accounts = await accountService.GetAccountsAsync();
    }
}
