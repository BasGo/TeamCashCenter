@page "/accounts/overview"
@using TeamCashCenter.Services.Contracts
@inject IAccountService accountService

<h2>Kontenübersicht</h2>

@if (accounts is null)
{
    <p>Loading...</p>
}
else
{
    <div class="mb-4">
        @if (paymentsAccount != null)
        {
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-0">@paymentsAccount.Name</h5>
                        <small class="text-muted">Hauptkonto</small>
                        <br />
               
                            <h6>Letzte Buchungen</h6>
                            <ul class="list-unstyled small">
                                @foreach (var t in paymentsAccount.Transactions.OrderByDescending(o => o.BookingDate).Take(3))
                                {
                                    <li>@t.BookingDate.ToString("dd.MM.yyyy") | @t.Amount.ToString("C") | @(t.User!=null ? t.User.FirstName+" "+t.User.LastName+" | " : "-")@(t.Description)</li>
                                }
                            </ul>
                 
                    </div>
                    <div class="text-end">
                        <div class="h5 m-0">@paymentsAccount.Balance.ToString("C")</div>
                        <small class="text-muted">Kontostand</small>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row">
        @foreach (var a in accounts)
        {
            if (paymentsAccount != null && a.Id == paymentsAccount.Id) { continue; }
            <div class="col-md-6 mb-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">@a.Name</h5>
                        <p class="card-text">Saldo: <strong>@a.Balance.ToString("C")</strong></p>
                        <h6>Letzte Buchungen</h6>
                        <ul class="list-unstyled small">
                            @foreach (var t in a.Transactions.OrderByDescending(o => o.BookingDate).Take(3))
                            {
                                @*<li>@t.BookingDate.ToString("yyyy-MM-dd") — @t.Amount.ToString("C") — @(t.User!=null ? t.User.FirstName+" "+t.User.LastName : "-")</li>*@
                                <li>@t.BookingDate.ToString("dd.MM.yyyy") | @t.Amount.ToString("C") | @(t.Description)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Account>? accounts;
    private Account? paymentsAccount;

    protected override async Task OnInitializedAsync()
    {
        var acc = await accountService.GetAccountsAsync();
        paymentsAccount = acc.FirstOrDefault(a => a.Order == 1);
        accounts = acc.Where(a => a.Order > 1).ToList();
    }
}
